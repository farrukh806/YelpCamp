<%- include('../partials/header');  -%>

<h1 class="text-center">Create a new Campground</h1>
<form action="/campgrounds" method="POST" class="from-group text-center">
    <input type="text" name="campgroundName" placeholder="Name of campground" autocomplete="off" required>
    <br>
    <input class="from-group mt-2" type="text" name="campgroundUrl" placeholder="Source url" autocomplete="off"
        required>
    <br>
    <textarea class="from-group mt-2" type="text" name="description" placeholder="Description"
        autocomplete="off"></textarea>
    <br>
    <button type="Submit" class="btn btn-lg btn-primary mt-2">Submit</button>
</form>

