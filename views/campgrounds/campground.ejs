<%- include('../partials/header'); -%>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1><i class="fas fa-campground"></i>Welcome to Yelp Camp!</h1>
            <p>View our hand picked campgrounds</p>
            <a href="/campgrounds/new" class="btn btn-lg btn-primary">Add new Campground</a>
        </div>
    </header>
    <div class="row">
        <% campgrounds.forEach(function(campground){ %>
        <div class="col-lg-4 col-md-4 col-sm-6 justify-content-md-center">
            <div class="card">
                <img class="card-img-top" src="<%= campground.url %>">
                <div class="card-body">
                    <h6 class="card-title text-center"><%= campground.name %></h6>
                    <div class="text-right">
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-info">Info</a>
                    </div>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>

<%- include('../partials/footer'); -%>